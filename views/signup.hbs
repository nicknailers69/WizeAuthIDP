<div class="row justify-content-center" style="margin-top:90px;">
    <div class="col-8 col-md-12 text-center">
        <img src="{{app_data.logo_url}}" width="300" class="ml-auto mr-auto" />
    </div>
    <div class="col-4 col-xl-4 col-lg-4 col-md-12">

        <h1 class="pb-5 pt-5 text-center">Signup to Wizeauth</h1>
        <form id="wizeauth_user_signup" method="post" action="/user/auth/create">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <input type="hidden" name="_session_id" value="{{session.id}}">
            <input type="hidden" name="_challenge" value="{{challenge}}">
            <input type="hidden" name="_ip" value="">
              <div class="form-group">
                <label for="_fullname">Enter your real name:</label>
                <input type="text" name="name" id="_fullname" aria-required="true" placeholder="First Middle Last" class="form-control" />
            </div>
              <div class="form-group">
                <label for="_dob">Confirm your date of birth:</label>
                <input type="text" name="birthdate" id="_dob" aria-required="true" placeholder="1900-01-01" class="form-control" />
            </div>
            <div class="form-group">
                <label for="_email">Email:</label>
                <input type="email" name="email" id="_email" aria-required="true" placeholder="your email address" class="form-control" />
            </div>
            <div class="form-group">
                <label for="_password">Password:</label>
                <input type="password" name="password" id="_password" aria-required="true" placeholder="your password" class="form-control" />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox"> I agree to the terms of service & Privacy policies
                </label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>

</div>